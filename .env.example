# ===========================================
# Tickasting Environment Variables
# Copy this file to .env and fill in values
# ===========================================

# Database
DATABASE_URL="postgresql://tickasting:tickasting@localhost:5433/tickasting?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# API Server
API_PORT=4001
API_HOST=0.0.0.0

# Indexer
INDEXER_PORT=4002
INDEXER_POLL_INTERVAL_MS=5000

# Kas.fyi API (for Kaspa adapter)
KASFYI_API_KEY=
KASFYI_BASE_URL=https://api.kas.fyi

# Network: mainnet | testnet
KASPA_NETWORK=testnet

# Finality depth (confirmations required for final status)
FINALITY_DEPTH=30

# Organizer auth token (simple MVP auth)
ORGANIZER_TOKEN=dev-organizer-token

# PoW default difficulty
DEFAULT_POW_DIFFICULTY=18

# Web App (Next.js)
NEXT_PUBLIC_API_URL=http://localhost:4001
NEXT_PUBLIC_WS_URL=ws://localhost:4001

# WebSocket broadcast interval
WS_BROADCAST_INTERVAL_MS=2000

# Contract (EVM / Sepolia)
CONTRACT_NETWORK=sepolia
CONTRACT_RPC_URL=https://sepolia.infura.io/v3/<your-key>
DEPLOYER_PRIVATE_KEY=
ETHERSCAN_API_KEY=
TICKASTING_CONTRACT_ADDRESS=
