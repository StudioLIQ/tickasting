{
  "name": "tickasting",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:e2e": "pnpm --filter @tickasting/api test:e2e",
    "test:e2e:fullstack": "bash scripts/run-fullstack-e2e.sh",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:generate": "pnpm --filter @tickasting/api db:generate",
    "db:migrate": "pnpm --filter @tickasting/api db:migrate",
    "db:push": "pnpm --filter @tickasting/api db:push",
    "db:seed": "pnpm --filter @tickasting/api db:seed",
    "db:studio": "pnpm --filter @tickasting/api db:studio"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
